<h1 class="section-title">EXPÉRIENCE</h1>
<div class="nice-bar"></div>

<style>
/* Container expérience */
.experience-container {
    display: flex;
    justify-content: center; /* centre l'ensemble */
    gap: 80px; /* espace entre bulles et CV */
    align-items: flex-start;
    margin-bottom: 150px;
    position: relative;
}

/* Ligne verticale de séparation entre bulles et CV */
.experience-separator {
    width: 2px;
    background: #ccc; /* gris clair */
    position: absolute;
    left: 50%; /* milieu du container */
    top: 0;
    bottom: 0;
    transform: translateX(-50%);
    z-index: 0;
}

/* Colonne des bulles */
.experience-bubbles {
    display: flex;
    flex-direction: column;
    gap: 40px; /* espace entre les bulles */
    position: relative;
    z-index: 1; /* au-dessus de la ligne de séparation */
    transform: translateX(-80px); /* décale uniquement les bulles vers la gauche */
}

/* Bullets à gauche */
.bubble-check {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: #d59bf6;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    font-size: 1.2rem;
}

.bubble-check.white {
    background: white;
}

/* Texte des bulles violettes */
.bubble-text {
    background: #d59bf6;
    color: black;
    padding: 20px 30px; /* plus grand padding */
    border-radius: 25px;
    max-width: 350px;
    font-size: 1rem;
    min-height: 130px; /* allonge la bulle pour correspondre à l'image */
    display: flex;
    align-items: center; /* centre verticalement le texte */
}

/* Ligne verticale reliant les bulles */
.bubble-line {
    position: absolute;
    width: 6px;
    background: #d59bf6;
    top: 30px;
    bottom: 30px;
    left: 25px;
    z-index: -1;
}

/* Image à droite */
.experience-image {
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 1; /* au-dessus de la ligne de séparation */
}

.experience-image img {
    width: 350px;
    border-radius: 12px;
    object-fit: cover;
}
</style>

<div class="experience-container">

    <!-- Ligne de séparation centrale -->
    <div class="experience-separator"></div>

    <div class="experience-bubbles">
        <!-- Ligne verticale -->
        <div class="bubble-line"></div>

        <!-- Stage 1 -->
        <div class="d-flex align-items-center gap-4">
            <div class="bubble-check">
                <i class="bi bi-check-lg" style="color:white;"></i>
            </div>
            <div class="bubble-text">
                Assistante Cheffe de Projet Digitale — Stagiaire<br>
                Epsilon — Vaulx-en-Velin (février 2022)
            </div>
        </div>

        <!-- Stage 2 -->
