{% extends 'base.html.twig' %}

{% block body %}

<link rel="stylesheet" href="{{ asset('style.css') }}">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<h1 class="section-title">CONTACT</h1>
<div class="nice-bar"></div>

<div class="contact-container">

    <!-- Coordonnées à gauche -->
    <div class="contact-info">
        <h2 class="main-title">MES COORDONNÉES</h2>

        <p class="big-text"><u>MAILS PROFESSIONNELS</u></p>
        <p class="big-text"><i class="bi bi-envelope-fill"></i> alya.oddoz.pro@gmail.com</p>
        <p class="big-text"><i class="bi bi-envelope"></i> alya.oddoz@etu.univ-st-etienne.fr</p>

        <p class="big-text"><u>MON LINKEDIN</u></p>
        <p class="big-text"><i class="bi bi-linkedin"></i> 
            <a href="http://linkedin.com/in/alya-oddoz-227860357" target="_blank">
                http://linkedin.com/in/alya-oddoz-227860357
            </a>
        </p>
    </div>

    <!-- Formulaire à droite -->
    <div class="contact-form">
        <div class="form-bubble">Formulaire de contact</div>
        <form id="contactForm" action="#" method="post">
            <input type="text" name="name" placeholder="Nom complet" required>
            <input type="email" name="email" placeholder="Adresse e-mail" required
                   pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
                   title="Veuillez respecter le format : exemple@domaine.com">
            <textarea name="message" placeholder="Message" rows="6" required></textarea>
            <button type="submit">Envoyer</button>
        </form>
    </div>

</div>

<style>
/* ================== CONTENEUR ================== */
.contact-container {
    display: flex;
    justify-content: center;
    gap: 80px;
    padding: 50px 20px 100px 20px;
    flex-wrap: wrap;
    align-items: center; /* Centre verticalement par rapport aux colonnes */
}

/* ================== COORDONNÉES ================== */
.contact-info {
    flex: 1;
    min-width: 280px;
    text-align: left;
}

.main-title {
    font-size: 1.8rem; /* Plus gros que le reste */
    margin-bottom: 30px; /* Plus d’espace sous le titre */
}

.contact-info p {
    margin: 12px 0;
}

.big-text {
    font-size: 1.3rem; /* Texte plus gros pour les mails et linkedin */
}

.contact-info a {
    color: #cfcfc0;
    text-decoration: underline;
}

.contact-info i {
    margin-right: 10px;
    font-size: 1.2rem;
    vertical-align: middle;
}

/* ================== FORMULAIRE ================== */
.contact-form {
    flex: 1;
    min-width: 300px;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center; /* Centre la bulle par rapport au formulaire */
}

.form-bubble {
    background-color: #d59bf6;
    color: black;
    display: inline-block;
    padding: 12px 25px;
    border-radius: 25px;
    font-weight: bold;
    margin-bottom: 20px;
}

.contact-form form {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 15px;
    border: 2px solid #fff;
    padding: 20px;
    border-radius: 12px;
    background-color: #0b0b0b;
}

.contact-form input,
.contact-form textarea {
    width: 100%;
    padding: 12px 15px;
    border: 2px solid #fff;
    border-radius: 8px;
    background: #0b0b0b;
    color: #cfcfc0;
    font-size: 1rem;
    resize: none;
    transition: border 0.3s;
}

.contact-form input:focus,
.contact-form textarea:focus {
    border-color: #d59bf6;
    outline: none;
}

.contact-form button {
    padding: 12px 20px;
    background: #d59bf6;
    color: black;
    font-size: 1rem;
    border: none;
    border-radius: 25px;
    cursor: pointer;
    transition: background 0.3s;
}

.contact-form button:hover {
    background: #b36ed0;
}

/* ================== RESPONSIVE ================== */
@media screen and (max-width: 900px) {
    .contact-container {
        flex-direction: column;
        align-items: center;
    }

    .contact-form,
    .contact-info {
        max-width: 400px;
        text-align: center; /* Centre le texte sur mobile */
    }

    .contact-info i {
        display: inline-block;
    }
}
</style>

{% endblock %}
